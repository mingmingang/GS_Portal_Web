                                    @(Html.DevExtreme().DataGrid<MasterCountry>()
    .ID("gridListCountry")
    .ShowBorders(true)
    .AllowColumnReordering(true)
    .AllowColumnResizing(true)
    .ColumnAutoWidth(true)
    .ColumnFixing(c => c.Enabled(true))
    .Scrolling(scrolling => scrolling.ColumnRenderingMode(GridColumnRenderingMode.Virtual))
    .ShowColumnLines(true)
    .RowAlternationEnabled(true)
    .ColumnChooser(c => c.Enabled(true).Mode(GridColumnChooserMode.Select))
    .DataSource(d => d.WebApi()
        .Controller("ManageMasterCountry")
        .DeleteAction(true)
        .UpdateAction(true)
        .InsertAction(true)
        .Key("country_id"))
    .Columns(columns => {
        columns.Add().Caption("No").AllowEditing(false).Width(80).FormItem(i => i.Visible(false)).CellTemplate(new JS("cell_numbering")).Alignment(HorizontalAlignment.Center);


        columns.AddFor(m => m.country_name).Caption("Country")
        .AllowEditing(true)
        .Alignment(HorizontalAlignment.Center)
        .FormItem(f => f.Visible(true).Editor(e => e.TextBox().Disabled(false).ReadOnly(false)));

        //columns.AddFor(m => m.country_customer).Caption("Customer")
