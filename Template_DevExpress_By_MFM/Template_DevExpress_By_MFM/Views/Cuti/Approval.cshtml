@model Template_DevExpress_By_MFM.Models.CutiModel

@{
    ViewBag.Title = "Persetujuan Cuti";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h4>Persetujuan Cuti Karyawan</h4>
<p>Konfirmasi persetujuan disesuaikan dengan keputusan dan kondisi pengajuan cuti.</p>

<div class="alert alert-info d-flex justify-content-between align-items-center">
    <div><i class="bi bi-info-circle me-2"></i>Status Cuti</div>
    <span class="badge bg-primary">Menunggu Persetujuan</span>
</div>

<div class="card p-4 mb-3">
    <h6><strong>Detail Cuti</strong></h6>
    <div class="row">
        <div class="col-md-6">
            <p><strong>No. Pengajuan:</strong> @Model.NoPengajuan</p>
            <p><strong>Pemohon:</strong> @Model.Permohonan</p>
            <p><strong>Tipe Cuti:</strong> @Model.TipeCuti</p>
        </div>
        <div class="col-md-6">
            <p><strong>Tanggal Pengajuan:</strong> @Model.TanggalCuti.ToString("dddd, dd MMMM yyyy")</p>
            <p><strong>Tanggal Cuti:</strong> @Model.TanggalMulai.ToString("dd MMM yyyy") - @Model.TanggalSelesai.ToString("dd MMM yyyy")</p>
        </div>
    </div>
</div>

<div class="card p-4 mb-4">
    <h6><strong>Keterangan Tambahan</strong></h6>
    <p>@Model.Keterangan</p>
</div>

<div class="d-flex justify-content-end gap-3">
    <form asp-action="Tolak" method="post">
        <input type="hidden" name="id" value="@Model.NoPengajuan" />
        <button type="submit" class="btn btn-danger px-4">Tolak</button>
    </form>
    <form asp-action="Setujui" method="post">
        <input type="hidden" name="id" value="@Model.NoPengajuan" />
        <button type="submit" class="btn btn-success px-4">Setujui</button>
    </form>
</div>
