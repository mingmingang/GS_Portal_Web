@model Template_DevExpress_By_MFM.Models.CutiModel

@{
    ViewBag.Title = "Pembatalan Cuti";
}

<style>
    .form-section {
        background-color: #ffffff;
        padding: 30px;
        border-radius: 12px;
        margin-top: 50px;
    }


    .fw-bold {
        font-weight:600;
    }

    .form-control:disabled {
        background-color: #f5f5f5;
        color: #6c757d;
    }

    .table thead {
        background-color: #143C96;
        color: white;
    }

    .table tbody tr {
        background-color: #f0f4ff;
    }

    .btn-submit {
        background-color: #28a745;
        color: white;
        padding: 10px 25px;
        border-radius: 8px;
        font-weight: bold;
        border: none;
    }

        .btn-submit:hover {
            background-color: #218838;
        }

    textarea {
        resize: none;
    }
</style>

<div class="container form-section">
    <h4 class="fw-bold mb-1">
        <i class="bi bi-calendar-x me-2"></i>Pembatalan Cuti
    </h4>
    <p class="text-muted">Pembatalan Cuti dapat dilakukan saat cuti belum dilakukan.</p>

    @using (Html.BeginForm("SubmitPembatalan", "Cuti", FormMethod.Post))
    {
        @Html.HiddenFor(m => m.NoPengajuan)

        <div class="mb-3">
            <label class="form-label fw-semibold">No. Pengajuan Cuti</label>
            <input type="text" class="form-control" style="width: 100%;" value="@Model.NoPengajuan" disabled />
        </div>

        <div class="mb-3">
            <label class="form-label fw-semibold">Tipe Cuti</label>
            <input type="text" class="form-control" value="@Model.TipeCuti" disabled />
        </div>

        <div class="mb-3">
            <label class="form-label fw-semibold">Tanggal Cuti</label>
            <input type="text" class="form-control" value="@Model.RangeTanggalCuti" disabled />
        </div>

        <div class="mb-3">
            <label class="form-label fw-semibold">Alasan Pembatalan</label>
            @Html.TextAreaFor(m => m.Alasan, new { @class = "form-control", placeholder = "Masukan alasan pembatalan...", rows = 4 })
        </div>

        <div class="table-responsive mb-4">
            <table class="table">
                <thead>
                    <tr>
                        <th>Tanggal</th>
                        <th class="text-center">Check</th>
                    </tr>
                </thead>
                <tbody>
                    @*@for (int i = 0; i < Model.TanggalList.Count; i++)
                    {
                        <tr>
                            <td>@Model.TanggalList[i].ToString("dd MMM yyyy")</td>
                            <td class="text-center">
                                <input type="checkbox" name="TanggalDipilih" value="@Model.TanggalList[i].ToString("yyyy-MM-dd")" />
                            </td>
                        </tr>
                    }*@
                </tbody>
            </table>
        </div>

        <div class="text-end">
            <button type="submit" class="btn btn-submit">Submit</button>

            <a href="@Url.Action("Index", "Cuti")" class="btn btn-primary">Kembali</a>
        </div>
    }
</div>
