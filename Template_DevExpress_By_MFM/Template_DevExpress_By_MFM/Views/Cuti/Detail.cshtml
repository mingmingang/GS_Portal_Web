@model Template_DevExpress_By_MFM.Models.CutiModel
@{
    ViewBag.Title = "Detail Cuti Karyawan";
}

<style>
    .container {
        margin-top: 70px;
    }
    .fw-bold{
        font-weight:600;
    }

    .text-end{
        text-align:right;
        font-weight:600;
    }
</style>

<div class="container">
    <h3 class="fw-bold">Detail Cuti Karyawan</h3>
    <p class="text-muted">Keterangan lebih lanjut cuti yang diajukan oleh anda.</p>

    <div class="alert alert-info d-flex justify-content-between align-items-center">
        <div>
            <i class="bi bi-info-circle me-2"></i>
            <strong>Status Cuti</strong>
        </div>
        <span class="badge bg-success fs-6 px-3 py-3 rounded-pill">@Model.Status</span>
    </div>

    <div class="card mb-4">
        <div class="card-body">
            <h5 class="fw-bold mb-4">Detail Cuti</h5>
            <div class="row mb-2">
                <div class="col-md-3 text-muted">No. Pengajuan</div>
                <div class="col-md-9 text-end fw-semibold">@Model.NoPengajuan</div>
            </div>
            <div class="row mb-2">
                <div class="col-md-3 text-muted">Plant</div>
                <div class="col-md-9 text-end">Karawang</div> <!-- Static -->
            </div>
            <div class="row mb-2">
                <div class="col-md-3 text-muted">Tipe Cuti</div>
                <div class="col-md-9 text-end">@Model.TipeCuti</div>
            </div>
            <div class="row mb-2">
                <div class="col-md-3 text-muted">Tanggal Pengajuan</div>
                <div class="col-md-9 text-end">@DateTime.Now.ToString("dddd, dd MMMM yyyy")</div> <!-- Placeholder -->
            </div>
            <div class="row mb-2">
                <div class="col-md-3 text-muted">Tanggal Cuti</div>
                <div class="col-md-9 text-end">@Model.TanggalCuti.ToString("dd MMM yyyy")</div>
            </div>
        </div>
    </div>

    <div class="card mb-4">
        <div class="card-body">
            <h5 class="fw-bold mb-3">Keterangan Tambahan</h5>
            <div class="row">
                <div class="col-md-3 text-muted">Keterangan</div>
                <div class="col-md-9 text-end">@Model.Permohonan</div>
            </div>
        </div>
    </div>

    <a href="@Url.Action("Index", "Cuti")" class="btn btn-primary">Kembali</a>
</div>
